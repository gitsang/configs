# fuck
fuck() {
  if [ $# -eq 1 ] && [ "$1" == "-" ]; then
    su - root
  elif [ $# -gt 0 ]; then
    # shellcheck disable=SC2068
    sudo $@
  else
    # shellcheck disable=SC2046
    sudo $(fc -ln -1)
  fi
}

