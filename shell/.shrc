# nvim diff
dirdiff() {
  DIR1=$(printf '%q' "$1")
  shift
  DIR2=$(printf '%q' "$1")
  shift
  # shellcheck disable=SC2068
  nvim $@ -c "DirDiff $DIR1 $DIR2"
}

