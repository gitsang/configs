#!/bin/bash

# shellcheck source=/dev/null
source "${HOME}/.local/etc/aifortune.conf"

aifortune() {
  sentences=$(curl -s "${BASE_URL}/chat/completions" \
    -H "Authorization: Bearer ${API_KEY}" \
    -H "Content-Type: application/json" \
    -d '{
    "model": "'"${MODEL}"'",
    "messages": [
      {
        "role": "user",
        "content": "请生成一句至理名言"
      }
    ]
  }')
  echo "${sentences}" | jq -r '.choices[0].message.content' | cowsay | lolcat
}

aifortune
