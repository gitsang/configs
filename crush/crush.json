{
  "$schema": "https://charm.land/crush.json",
  "options": {
    "debug": true,
    "debug_lsp": true,
    "context_paths": ["./AGENTS.md", "./CONTRIBUTE.md"]
  },
  "permissions": {
    "allowed_tools": ["view", "ls", "grep", "edit"]
  },
  "lsp": {
    "go": {
      "command": "gopls",
      "filetypes": ["go"]
    },
    "htmx": {
      "command": "htmx-lsp",
      "filetypes": ["html"]
    },
    "vue": {
      "command": "npx",
      "args": ["-y", "@vue/language-server", "--stdio"],
      "filetypes": ["vue"],
      "options": {
        "typescript": {
          "tsdk": "./node_modules/typescript/lib"
        }
      }
    },
    "typescript": {
      "command": "npx",
      "args": ["-y", "typescript-language-server", "--stdio"],
      "filetypes": ["ts"]
    }
  },
  "mcp": {
    "playwright-npx": {
      "disabled": false,
      "type": "stdio",
      "command": "npx",
      "args": ["@playwright/mcp@latest", "--isolated"]
    },
    "playwright-docker": {
      "disabled": true,
      "type": "stdio",
      "command": "docker",
      "args": ["run", "-i", "--rm", "mcp/playwright"]
    },
    "shadcn": {
      "type": "stdio",
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    }
  },
  "models": {
    "large": { "model": "qwen/qwen3-coder:free", "provider": "openrouter" }
  },
  "providers": {
    "yllm": {
      "type": "openai",
      "base_url": "https://yllm.worklink.work/yllm/v1",
      "api_key": "",
      "models": [
        {
          "id": "claude-4.0-sonnet",
          "name": "Claude 4.0 Sonnet",
          "cost_per_1m_in": 3,
          "cost_per_1m_out": 15,
          "cost_per_1m_in_cached": 3.75,
          "cost_per_1m_out_cached": 0.3,
          "context_window": 262144,
          "default_max_tokens": 26214,
          "can_reason": true,
          "has_reasoning_efforts": false,
          "supports_attachments": true
        },
        {
          "id": "gpt-5-chat",
          "name": "GPT-5 Chat",
          "cost_per_1m_in": 1.25,
          "cost_per_1m_out": 10,
          "cost_per_1m_in_cached": 0.25,
          "cost_per_1m_out_cached": 0.25,
          "context_window": 400000,
          "default_max_tokens": 128000,
          "can_reason": true,
          "has_reasoning_efforts": false,
          "default_reasoning_effort": "minimal",
          "supports_attachments": true
        }
      ]
    },
    "modelscope": {
      "type": "openai",
      "base_url": "https://api-inference.modelscope.cn/v1",
      "api_key": "",
      "models": [
        {
          "id": "Qwen/Qwen3-Coder-480B-A35B-Instruct",
          "name": "Qwen3-Coder-480B-A35B-Instruct",
          "cost_per_1m_in": 0,
          "cost_per_1m_out": 0,
          "cost_per_1m_in_cached": 0,
          "cost_per_1m_out_cached": 0,
          "context_window": 262144,
          "default_max_tokens": 26214,
          "can_reason": true,
          "supports_attachments": true,
          "has_reasoning_efforts": false
        }
      ]
    },
    "openrouter": {
      "type": "openai",
      "base_url": "https://openrouter.ai/api/v1",
      "api_key": "",
      "models": [
        {
          "id": "qwen/qwen3-coder:free",
          "name": "Qwen: Qwen3 Coder (free)",
          "cost_per_1m_in": 0,
          "cost_per_1m_out": 0,
          "cost_per_1m_in_cached": 0,
          "cost_per_1m_out_cached": 0,
          "context_window": 262144,
          "default_max_tokens": 26214,
          "can_reason": false,
          "has_reasoning_efforts": false,
          "supports_attachments": false
        }
      ]
    }
  }
}
